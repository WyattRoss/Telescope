<div class="row no-gutters justify-content-center">
    <div class="card col-sm-11 col-md-9, col xl-6 text-dark">
        <div class="card-header">
            <h1> Upload Enrollments for {{title}}</h1>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group row"> 
                    <label class="form-label col-sm-3" for="csv_upload">Upload Enrollment CSV</label>
                    <div class="col">
                        <input type="file" class="form-control" id="csv_upload" name="csv_upload"/>
                    </div>
                </div>
                <div class="form-group row">
                    {{! Assuming that all users in a given csv have the same number of credits}}
                    <label class="form-label col-sm-3" for="credit">Credit Count</label>
                    <div class="col">
                        <input type="number" class="form-control" id="credits" name="credits"/>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Submit Enrollments</button>
            </form>
        </div>
    </div>
</div>
